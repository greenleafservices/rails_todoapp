<%# @page_title = "Delete Subject" %>

<%#= link_to("<< Back to Index", todos_path, :class => 'back-link') %>

<div class="todos delete">
  <h2>Delete ToDo Item</h2>

  <%= form_for(@todo, :method => 'delete') do |f| %>

    <p>Are you sure you want to permanently delete this ToDo Item?</p>
    
    <p class="reference-name"><%= f.object.name %></p>

    <div class="form-buttons">
      <%= f.submit("Delete ToDo Item") %>
    </div>

  <% end %>
</div>
<br>
<%= link_to "Back to ToDo Items Listing", todos_path %>