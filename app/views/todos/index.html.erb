<% @page_title = "List ToDo Item" %>

<div class="todo index">
  <h2>To Do Items</h2>

  <!--<%#= image_tag('plus_sign.png', :size => '11x11', :alt => '+') %>-->
  <%= link_to("Add New ToDo Item", new_todo_path, :class => 'action new') %>

  <table class="listing" summary="To Do List">
    <tr class="header">
      <th>ID</th>
      <th>Name</th>
      <th>Description</th>
      <th>ID</th>
      <th>Actions</th>
    </tr>
    <!-- This loops through the todo table and assigns
          values to the todo value -->
    <% @todos.each do |todo| %>
      <tr>
        <td class="col-30"><%= todo.id %></td>
        <td class="col-210"><%= todo.name %></td>
        <td class="col-300"><%= todo.description %></td>
        <td class="col-30"><%= todo.id %></td>
        <td class="actions">
          <%= link_to("Show", todo_path(todo), :class => 'action show') %>
          <%= link_to("Edit", edit_todo_path(todo), :class => 'action show') %>
          <%= link_to("Delete", delete_todo_path(todo), :class => 'action delete') %>
        </td>
      </tr>
      <!--  <%#= link_to("Edit", edit_subject_path(subject), :class => 'action edit') %>-->
      
      <!--</td>-->
      
    <% end %>
  </table>
  <br>
  <br>
  <!--<p>-->
  <!--  <%#= link_to("Return to Main Menu", admin_path) %>-->
  <!--</p>-->
</div>
